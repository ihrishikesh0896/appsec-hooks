# Example: Multi-Profile Configuration
# Use this when your repository contains multiple types of code
# (e.g., a web app with infrastructure-as-code)

repos:
  # ============================================
  # Primary: Web Application Security
  # Runs on all files
  # ============================================
  - repo: https://github.com/company-org/appsec-hooks
    rev: v1.0.0
    hooks:
      - id: security-profile-web-app
        stages: [commit]

  # ============================================
  # Secondary: Infrastructure Security
  # Runs only on IaC files
  # ============================================
  - repo: https://github.com/company-org/appsec-hooks
    rev: v1.0.0
    hooks:
      - id: security-profile-infra
        # Only run on infrastructure files
        files: ^(terraform/|k8s/|kubernetes/|cloudformation/|\.github/|helm/|ansible/)
        stages: [commit]

  # ============================================
  # Team-specific hooks
  # ============================================
  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v4.6.0
    hooks:
      - id: trailing-whitespace
      - id: end-of-file-fixer
      - id: check-yaml
      - id: check-json

