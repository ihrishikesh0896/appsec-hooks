# Example .pre-commit-config.yaml for Application Repositories
# Copy this file to your repository as .pre-commit-config.yaml
# Then run: pre-commit install

repos:
  # ============================================
  # Corporate Security Baseline
  # Managed by AppSec Team - DO NOT MODIFY
  # ============================================

  # Option 1: Web Application (most common)
  - repo: https://github.com/ihrishikesh0896/appsec-hooks
    rev: v1.0.0
    hooks:
      - id: security-profile-web-app

  # Option 2: Infrastructure-as-Code
  # - repo: https://github.com/ihrishikesh0896/appsec-hooks
  #   rev: v1.0.0
  #   hooks:
  #     - id: security-profile-infra

  # Option 3: Mobile Application
  # - repo: https://github.com/ihrishikesh0896/appsec-hooks
  #   rev: v1.0.0
  #   hooks:
  #     - id: security-profile-mobile

  # Option 4: Base (minimal)
  # - repo: https://github.com/ihrishikesh0896/appsec-hooks
  #   rev: v1.0.0
  #   hooks:
  #     - id: security-profile-base

  # ============================================
  # Team-specific hooks (customize as needed)
  # ============================================

  # Code formatting
  - repo: https://github.com/psf/black
    rev: 24.4.2
    hooks:
      - id: black

  - repo: https://github.com/PyCQA/isort
    rev: 5.13.2
    hooks:
      - id: isort

  # Linting
  - repo: https://github.com/PyCQA/flake8
    rev: 7.1.0
    hooks:
      - id: flake8

  # Type checking
  - repo: https://github.com/pre-commit/mirrors-mypy
    rev: v1.10.0
    hooks:
      - id: mypy

  # General file checks
  - repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v4.6.0
    hooks:
      - id: trailing-whitespace
      - id: end-of-file-fixer
      - id: check-yaml
      - id: check-json
      - id: check-toml

